    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginEnd">@dimen/_dp12</item>
        <item name="android:layout_marginStart">@dimen/_dp12</item>
        <item name="android:layout_marginTop">@dimen/_dp10</item>
        <item name="android:padding">@dimen/_dp10</item>
        <item name="android:drawablePadding">@dimen/_dp8</item>
        <item name="android:background">@drawable/search_view_backgorund</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>