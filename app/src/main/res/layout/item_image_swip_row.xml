<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/_dp10"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_category_photo"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginTop="@dimen/_dp4"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/txt_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_dp4"
            android:padding="@dimen/_dp4"
            android:maxLines="1"
            android:text="Alcatel Go Watch Black"
            android:textStyle="bold" />


</LinearLayout>
</layout>